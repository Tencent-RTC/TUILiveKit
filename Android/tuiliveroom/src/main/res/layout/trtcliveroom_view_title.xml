<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <TextView
        android:id="@+id/menu_return"
        android:textColor="@color/trtcliveroom_color_white"
        android:textSize="@dimen/trtcliveroom_text_size_middle"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/trtcliveroom_ic_back"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/title"
        android:textSize="@dimen/trtcliveroom_text_size_large"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:textColor="@color/trtcliveroom_color_white"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/menu_more"
        android:textSize="@dimen/trtcliveroom_text_size_large"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:textColor="@color/trtcliveroom_color_white"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
</RelativeLayout>