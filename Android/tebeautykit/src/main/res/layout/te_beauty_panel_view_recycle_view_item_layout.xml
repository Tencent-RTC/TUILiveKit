<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="80dp"
    android:layout_height="90dp">

    <com.tencent.effect.beautykit.view.widget.PanelItemSelectorLayout
        android:id="@+id/te_beauty_panel_view_item_left_layout"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="3dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/te_panel_view_item_layout_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:clickable="false"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/te_panel_view_item_layout_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="56dp"
            android:maxLines="1"
            android:textColor="@color/te_beauty_color_99FFFFFF"
            android:textSize="10sp" />


        <View
            android:id="@+id/te_panel_view_item_layout_point_view"
            android:layout_width="2dp"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/te_beauty_panel_menu_item_red_round_bg" />

    </com.tencent.effect.beautykit.view.widget.PanelItemSelectorLayout>


    <View
        android:id="@+id/te_panel_view_item_layout_right_divider"
        android:layout_width="1dp"
        android:layout_height="24dp"
        android:layout_marginTop="14dp"
        android:background="@color/te_beauty_color_80333333"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/te_beauty_panel_view_item_left_layout" />
</androidx.constraintlayout.widget.ConstraintLayout>