<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_root"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:paddingHorizontal="16dp">

    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="2dp"
            android:src="@drawable/karaoke_music_small_icon" />

        <TextView
            android:id="@+id/tv_music_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/karaoke_no_song"
            android:textColor="@color/karaoke_color_white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_music_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/karaoke_color_white"
            android:textSize="12sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/ll_right_icons"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_pause"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:id="@+id/iv_next"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginEnd="8dp"/>

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"/>

            <ImageView
                android:id="@+id/iv_original"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_time_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/karaoke_text_grey"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_seg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="@color/karaoke_text_grey"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/karaoke_text_grey"
            android:textSize="9sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_order_music"
        android:layout_width="88dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/karaoke_oval_gradient_bg"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/karaoke_music_small_icon_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="@string/karaoke_order_song"
            android:textColor="@color/karaoke_color_white"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_waiting_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/karaoke_audience_waiting_tips"
        android:textColor="@color/karaoke_color_white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_pause_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/karaoke_song_pause"
        android:textColor="@color/karaoke_color_white"
        android:textSize="14sp" />

    <FrameLayout
        android:id="@+id/fl_score"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/karaoke_score_background"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="100.0"
                android:textColor="@color/karaoke_pitch_score_text"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="4dp"
                android:text="åˆ†"
                android:textColor="@color/karaoke_pitch_score_text"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginVertical="15dp"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_user_avatar"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:src="@drawable/karaoke_song_cover"
                app:shapeAppearanceOverlay="@style/ClickRoundedImageView" />

            <TextView
                android:id="@+id/tv_requester_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/karaoke_color_grey_8c"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/karaoke_singing_score"
                android:textColor="@color/karaoke_color_grey_8c"
                android:textSize="12sp" />
        </LinearLayout>
    </FrameLayout>


</FrameLayout>