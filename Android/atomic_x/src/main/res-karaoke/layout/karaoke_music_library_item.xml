<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@color/karaoke_panel_bg">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical|start"
        android:contentDescription="@string/karaoke_order_song"
        android:scaleType="centerCrop"
        android:src="@drawable/karaoke_song_cover" />

    <Button
        android:id="@+id/btn_request_music"
        android:layout_width="56dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical|end"
        android:background="@drawable/karaoke_btn_blue_bg"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="@string/karaoke_order_song"
        android:textAllCaps="false"
        android:textColor="@color/karaoke_color_white"
        android:textSize="12sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="84dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/karaoke_color_white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_singer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/karaoke_color_grey_8c"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_original"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/karaoke_bg_karaoke_tag_blue"
                android:gravity="center"
                android:minWidth="36dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/karaoke_original"
                android:textColor="@color/karaoke_color_blue"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:background="@drawable/karaoke_bg_karaoke_tag_green"
                android:gravity="center"
                android:minWidth="36dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/karaoke_score"
                android:textColor="@color/karaoke_color_green"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>