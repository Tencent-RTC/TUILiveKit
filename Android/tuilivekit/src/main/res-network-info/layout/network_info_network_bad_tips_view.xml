<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/network_info_network_bad_tips_view_bg"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="12dp">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/network_info_network_bad_tips_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:maxLines="1"
        android:text="@string/common_network_bad_tips"
        android:textColor="@color/common_design_standard_g7"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginStart="5dp"
        android:id="@+id/tv_switch_network"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:maxLines="1"
        android:text="@string/common_switch_network"
        android:textColor="@color/common_text_color_link"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/network_info_toast_close_icon" />
</LinearLayout>