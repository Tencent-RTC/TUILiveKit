<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="718dp"
    android:background="@drawable/livekit_dialog_background"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="718dp"
        android:background="@drawable/livekit_dialog_background"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <include layout="@layout/livekit_panel_header" />

        <TextView
            android:id="@+id/seat_invitation_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:text="@string/livekit_anchor_audience_list_panel_title"
            android:textColor="@color/livekit_design_standard_g7"
            android:textSize="16sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_seat_invitation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp" />
    </LinearLayout>
</ScrollView>