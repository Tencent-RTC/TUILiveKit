<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="114dp"
    android:layout_height="86dp"
    android:background="@drawable/livekit_anchor_apply_link_audience_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginTop="18dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_ellipsis"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginStart="18dp"
            android:background="@drawable/livekit_anchor_apply_link_audience_head_background">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerInParent="true"
                android:src="@drawable/livekit_ellipsis"
                app:roundPercent="1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_first_apply_link_audience"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@drawable/livekit_anchor_apply_link_audience_head_background">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/iv_first_apply_link_audience"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerInParent="true"
                android:src="@drawable/livekit_ic_avatar"
                app:roundPercent="1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_second_apply_link_audience"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginStart="-18dp"
            android:background="@drawable/livekit_anchor_apply_link_audience_head_background">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/iv_second_apply_link_audience"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/livekit_ic_avatar"
                app:roundPercent="1" />
        </RelativeLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_apply_link_audience_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:padding="0dp"
        android:textColor="@color/livekit_design_standard_flowkit_white"
        android:textSize="14sp" />
</LinearLayout>