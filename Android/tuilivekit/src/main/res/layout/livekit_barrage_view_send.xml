<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/livekit_bottom_btn_background"
    android:id="@+id/root_barrage_view">

    <RelativeLayout
        android:id="@+id/rl_emoticons"
        android:layout_width="@dimen/livekit_icon_size"
        android:layout_height="@dimen/livekit_icon_size"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/livekit_ic_emoticons" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginStart="6dp"
        android:text="@string/livekit_barrage_text_hint"
        android:textColor="@color/livekit_design_standard_g7"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:layout_toEndOf="@+id/rl_emoticons"/>

</RelativeLayout>