<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:layout_gravity="center_vertical"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <com.trtc.uikit.livekit.component.barrage.BarrageInputView
        android:id="@+id/rl_barrage_button"
        android:layout_width="130dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:background="@drawable/livekit_barrage_button_bg"
        android:gravity="center_vertical" />

    <FrameLayout
        android:id="@+id/microphone_container"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:background="@drawable/livekit_mic_icon_bg">

        <ImageView
            android:id="@+id/iv_microphone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/livekit_ic_mic_closed"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/function_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="15dp"
        android:layout_weight="1" />
</LinearLayout>