<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_barrage"
        android:layout_width="130dp"
        android:layout_height="36dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <RelativeLayout
        android:id="@+id/rl_link_mic"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/rl_barrage"
        app:layout_constraintEnd_toStartOf="@+id/rl_settings"
        android:layout_weight="1">
        <Button
            android:id="@+id/btn_link"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:textAllCaps="false"
            android:background="@drawable/livekit_function_link_default" />
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rl_settings"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/rl_barrage"
        app:layout_constraintEnd_toStartOf="@+id/rl_music">
        <Button
            android:id="@+id/btn_settings"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:textAllCaps="false"
            android:background="@drawable/livekit_function_settings" />
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rl_music"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/rl_barrage"
        app:layout_constraintEnd_toEndOf="parent" >
        <Button
            android:id="@+id/btn_music"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:textAllCaps="false"
            android:background="@drawable/livekit_function_music" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>