<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_gift_root"
    android:layout_width="match_parent"
    android:layout_height="114dp"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_gift"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_gift_icon"
            android:layout_width="76dp"
            android:layout_height="74dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/gift_icon_bg"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tv_gift_name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/common_text_color_primary"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_gift_price"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp"
        android:textColor="@color/common_text_color_secondary"
        android:textSize="10sp" />

</LinearLayout>